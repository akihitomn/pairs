                    オフラインモード設定
        %nav.box_other_navi
          %li.other_navi_item.other_navi_item01
            %a
              童貞の方へ
          %li.other_navi_item.other_navi_item02
            %a
              男性会員限定
          %li.other_navi_item.other_navi_item02
            %a
              ヘルプ
    .main_contents
      .ui-view
        .main.box_message_view
          .deta-matched-partners
            .box_message_inner_left
              .box_matching_summary
                %p.matching_summary_text
                  マッチングしています
              %ol.box_matching_list.box_inner_scroll.ps_container
                -@users.each do |user|
                  -if user.active_relationships.find_by(following_id: current_user.id)
                    %li.matching_item.is_un_answered
                      %a
                        %img.user_photo.image_circle{src: "https://pairs-production.akamaized.net/icon/6065/3396065/1500195817_4f9c07c5cbbb6ad0843bda52431b40cbea37604b.jpg?v=1&impolicy=pairs160x160&imwidth=160&width=160&height=160", height: "55px", width: "55px"}
                        .info_inner
                          .user_info01
                            %span
                              =user.name
                          .user_info02
                          %p.login_time
                            8/4 7:14
            .box_message_inner_right
